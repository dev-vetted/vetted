# Production Environment
# Copy this to .env.production for production deployments

# Environment Configuration
APP_ENV=production
NODE_ENV=production

# API URLs
NEXT_PUBLIC_API_URL=https://api.vetted.com
EXPO_PUBLIC_API_URL=https://api.vetted.com

# Database
DATABASE_URL=postgresql://prod_user:prod_pass@prod-db.supabase.co:5432/postgres

# Payments (Live Mode for Production)
PAYMENTS_MODE=live
RAZORPAY_KEY_ID=rzp_live_production_key_here
RAZORPAY_KEY_SECRET=production_secret_here
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_live_production_key_here
EXPO_PUBLIC_RAZORPAY_KEY_ID=rzp_live_production_key_here

# Video/Communication
AGORA_APP_ID=production_agora_app_id
AGORA_APP_CERT=production_agora_cert
NEXT_PUBLIC_AGORA_APP_ID=production_agora_app_id
EXPO_PUBLIC_AGORA_APP_ID=production_agora_app_id

# Storage (AWS S3)
S3_BUCKET=vetted-production-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=production_s3_access_key
S3_SECRET_ACCESS_KEY=production_s3_secret

# Supabase
SUPABASE_URL=https://production.supabase.co
SUPABASE_ANON_KEY=production_anon_key
SUPABASE_SERVICE_KEY=production_service_key
NEXT_PUBLIC_SUPABASE_URL=https://production.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=production_anon_key
EXPO_PUBLIC_SUPABASE_URL=https://production.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=production_anon_key

# Cache / Queue (Upstash Redis)
UPSTASH_REDIS_URL=redis://production-redis.upstash.io:6379
UPSTASH_REDIS_TOKEN=production_redis_token

# Image Processing
IMAGEKIT_PUBLIC_KEY=production_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=production_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/production_id
